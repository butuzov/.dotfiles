#!/usr/bin/env bash


navigate() {
    sleep 5
    open "http://localhost:8888"
}

jupyter_subcmd() {

    local jupyter_bin="docker run --rm -p 8888:8888 -v $(pwd):/usr/share/ butuzov/jupyter:latest "

    if [ -z "$1" ]; then
        navigate &
        $jupyter_bin
    else
        case "$1" in
            # removes all containers
            "nopass") \
                navigate &
                $jupyter_bin --NotebookApp.token='' --NotebookApp.password='';;
        esac
    fi
}


jupyter_subcmd $@
