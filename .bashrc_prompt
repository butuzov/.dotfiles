export TERM="xterm-color"

# How it looks
GREEN="\[\e[102;30m\]"
WHITE="\[\e[107;30m\]"
YELLO="\[\e[1;33m\]"
RESET="\[\e[0m\]"


echo -e "\033]6;1;bg;red;brightness;40\a" > /dev/null
echo -e "\033]6;1;bg;green;brightness;40\a" > /dev/null
echo -e "\033]6;1;bg;blue;brightness;40\a" > /dev/null

BLUE="\[\e[104;30m\]"


kubeprompt_ctx_check(){

    CURRENT_CONTEXT_NOT_SET=$(kubectl config current-context 2>&1 \
        | grep "current-context is not set")

    if [[ ! -z $CURRENT_CONTEXT_NOT_SET ]]; then
        exit 0
    fi

    printf " %s " $(kubeprompt -fm)
}


PS1="${RESET}"
PS1+="${WHITE} $ \u ${RESET}"
PS1+="${BLUE}\$(kubeprompt_ctx_check)${RESET}"
PS1+="${GREEN} \w ${RESET}"
PS1+="\n${YELLO} > ${RESET}"
export PS1=$PS1



export SUDO_PS1="${RESET}${WHITE} # \u@\h ${GREEN} \w ${RESET} \n${YELLO} > ${RESET}";

export CLICOLOR=1l
export LSCOLORS=ExFxBxDxCxegedabagacad

export LC_CTYPE="UTF-8"
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
