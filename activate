#!/usr/bin/env bash

CWD=$(pwd)
NWD=$(dirname $0)
# change directory
printf "# Activation Procedure Triggered \n\n";
cd $NWD

source "${NWD}/bin/activate-functions.sh"

# Actual bashrc and supported variable
install_bashrc

# vim settings & initial Vundle.vim
install_dot .vimrc
install_git_repository "https://github.com/VundleVim/Vundle.vim" \
						".vim/bundle/Vundle.vim"

# installing php tooling
install_php_tooling

# installing devops tooling
install_devops_tooling


cd "${CWD}"
