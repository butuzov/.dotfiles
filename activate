#!/usr/bin/env bash

source "scripts/installation.sh"


header "# Activation Procedure Triggered"
install_brew
install_brew coreutils

# global .general bashrc
header "# .bashrc installation"
NWD=$(dirname $(realpath $0))
DOTS_PATH=$NWD
install_bashrc
source $NWD/.bashrc

# global .editorconfig
header "# Development"
install_dot .editorconfig

# git and related configs
header "# Git"
install_brew git
message 2 "$( printf "installed: %s " "$(git version)" )"
install_dot .gitconfig
install_dot .gitignore_global
install_dot .gitattributes
install_dot .gitmessage


# PHP & Tooling
header "# PHP"
install_brew php
message 2 "$( printf "installed: %s " "$(php -version | head -n 1)" )"
install_php_tooling

# nodejs
install_brew nodejs
message 2 "$( printf "installed: %s " "$(node -v)" )"

# Go & Tooling
header "# Go"
install_brew go
message 2 "$( printf "installed: %s " "$(go version)" )"

# Python & Tooling
header "# Python"
install_brew python
message 2 "$( printf "installed: %s " "$(python3 -V)" )"

## Python Tooling
npm install pyright  -g
python3 -m pip install --upgrade pip
python3 -m pip install --upgrade pep8 pylint ansible youtube-dl icecream > /dev/null 2>&1


# # vim settings & initial Vundle.vim
header "# vim"
install_brew vim
install_dot .vimrc
install_git_repository "https://github.com/VundleVim/Vundle.vim" "vim/bundle/Vundle.vim"

# go kernel
brew install zeromq pkg-config
go get -u github.com/gopherdata/gophernotes

# DevOps
# serverless
install_brew serverless            #

## aws cli
install_brew awscli                #

# hashitools
install_brew consul                #
install_brew vault                 #
install_brew packer                #
install_brew terraform             #

# Kubernetes
install_brew kubectl
install_brew kubernetes-helm

# Virtualization
brew cask install virtualbox
brew cask install vagrant
brew cask install vmware-fusion

# Additional Tools - Dev
brew cask install sourcetree
brew cask install cronnix
brew cask install iterm2
brew cask install visual-studio-code

# Additional Tools - Productivity
brew cask install fantastical
brew cask install agenda
brew cask install cheatsheet

# Additional Tools - Media
brew cask install iina
brew cask install audiobook-builder
brew cask install handbrake
brew cask install imageoptim

# nessages
brew cask install slack
brew cask install skype
brew cask install skype-for-business
brew cask install telegram-desktop

# utils
brew cask install appcleaner
brew cask install ankiapp-anki
brew cask install istat-menus
brew cask install dd-utility
brew cask install the-unarchiver


# Additional software
header "# Additional Software"
install_brew ffmpeg
install_brew bash-completion
install_brew jq
install_brew htop
