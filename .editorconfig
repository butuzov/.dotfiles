# top-most EditorConfig file
root = true

[*]
end_of_line = lf                   # Unix-style newlines
insert_final_newline = true
charset = utf-8

indent_style = space               # default identation - spaces
indent_size = 4                    # default identation - size

insert_final_newline = true        # new line at the end of file
trim_trailing_whitespace = true    # no extra sapces at the end of lines

max_line_length = 100              # wouldn't work in vsc, only in atom and vim

[*.py]
max_line_length = 79               # pep8

[*.{php,inc}]
indent_style = tab                 # PHP

[*.go]
indent_style = tab                 # Go

[*.sh]
indent_size = 2                    # Shell Scripts

[*.{c,cpp,cu,java}]                # Shell 
indent_size = 4

[*.tex]                            # LaTeX
indent_size = 2
max_line_length = 120

[Makefile]                         # Make
indent_style = tab

[Vagrantfile]
indent_size = 2

[*.{yml,yaml,md,markdown}]         # Markup
indent_size = 2

[*.json]                           # JSON
indent_size = 4
indent_style = space
