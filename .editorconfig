# top-most EditorConfig file
root = true

[*]
charset = utf-8
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
tab_width = 4

# LaTeX files.
[*.tex]
tab_width = 2
indent_size = 2
indent_style = space
max_line_length = 120

# Make
[Makefile]
indent_style = tab
max_line_length = 100

# Vagrantfile
[Vagrantfile]
indent_style = space
max_line_length = 100

# General Programming languages and markup files.
[*.php]
tab_width = 4
indent_style = tab
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++/C(uada)/Java
[*.{c,cpp,cu,java}]
indent_size = 4
indent_style = space
max_line_length = 100

# Bash files
[*.sh]
indent_style = space
max_line_length = 100
tab_width = 4

[*.py]
indent_size = 4
indent_style = space

[*.{json,conf}]
indent_size = 4
indent_style = tab
max_line_length = 120

[*.{yml,yaml,md,markdown}]
indent_size = 2
indent_style = space
