# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space
max_line_length = 80
tab_width = 4

# Go
[*.go]
tab_width = 4
indent_style = tab
max_line_length = 120
trim_trailing_whitespace = true

# PHP
[*.{php,inc}]
tab_width = 4
indent_style = tab
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_size = 4
indent_style = space
max_line_length = 79

# Bash files
[*.sh]
indent_size = 4
indent_style = space
max_line_length = 100

# C/C++/Cuda/Java
[*.{c,cpp,cu,java}]
indent_size = 4
indent_style = space
max_line_length = 100

# LaTeX
[*.tex]
indent_size = 2
indent_style = space
max_line_length = 120

# Make
[Makefile]
indent_style = tab
max_line_length = 100

# Vagrantfile
[Vagrantfile]
indent_size = 2
indent_style = space
max_line_length = 100

# Yaml and Makrdown
[*.{yml,yaml,md,markdown}]
indent_size = 2
indent_style = space

# json and nginx conf
[*.{json,conf}]
indent_size = 4
indent_style = tab
max_line_length = 120
